{
  "name": "fangx/testing",
  "description": "hyperf database testing support",
  "type": "library",
  "keywords": [
    "php",
    "hyperf",
    "sqlite",
    "testing"
  ],
  "authors": [
    {
      "name": "nfangxu",
      "email": "nfangxu@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "psr/container": "^1.0",
    "phpunit/phpunit": "^7.0",
    "hyperf/contract": "~1.1.0",
    "hyperf/utils": "~1.1.0",
    "hyperf/di": "~1.1.0",
    "hyperf/db-connection": "~1.1.0",
    "hyperf/devtool": "~1.1.0"
  },
  "require-dev": {
    "malukenho/docheader": "^0.1.6",
    "mockery/mockery": "^1.0",
    "friendsofphp/php-cs-fixer": "^2.9"
  },
  "suggest": {
    "fangx/sqlite-driver": "Required to use sqlite driver for database."
  },
  "autoload": {
    "psr-4": {
      "Fangx\\Testing\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
    }
  },
  "extra": {
    "hyperf": {
      "config": "Fangx\\Testing\\ConfigProvider"
    }
  },
  "scripts": {
    "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
    "cs-fix": "php-cs-fixer fix $1"
  },
  "config": {
    "sort-packages": true
  },
  "license": "MIT"
}